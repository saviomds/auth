<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card my-5">
      <form class="card-body cardbody-color p-lg-5" method="post">
        <h1>Register</h1>
        <div class="text-center">
          <img
            src="https://dscrowdy-rbp9.onrender.com/resume/dsCrowdy.png"
            class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
            width="100px"
            alt="profile"
          />
        </div>
        
        <%- include('partials/messages') %>
        <div class="mb-3">
          <input
            type="text"
            class="form-control p-lg-3"
            id="username"
            name="username"
            placeholder="Username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control p-lg-3"
            id="email"
            name="email"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            name="password"
            class="form-control p-lg-3"
            id="password"
            placeholder="Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="text-center">
          <button
            type="submit"
            name="submit"
            class="btn btn-secondary p-lg-3 fs-4 mb-5 w-100"
          >
            Register
          </button>
        </div>
        <div id="emailHelp" class="form-text text-center mb-5 text-dark">
          Registered?
          <a href="login" class="text-dark fw-bold"> Login Hop In</a>
        </div>
      </form>
    </div>
  </div>
</div>
