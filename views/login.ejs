<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card my-5">
      <form class="card-body cardbody-color p-lg-5">
        <h1>Login</h1>
        <div class="text-center">
          <img
            src="https://dscrowdy-rbp9.onrender.com/resume/dsCrowdy.png"
            class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
            width="100px"
            alt="profile"
          />
        </div>

        <div class="mb-3">
          <input
            type="text"
            class="form-control p-lg-3"
            id="email"
            name="email"
            aria-describedby="emailHelp"
            placeholder="Email"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            class="form-control p-lg-3"
            id="password"
            placeholder="Password"
          />
        </div>
        <div class="text-center">
          <button
            type="submit"
            class="btn btn-secondary p-lg-3 fs-4 mb-5 w-100"
          >
            Login
          </button>
        </div>
        <div id="emailHelp" class="form-text text-center mb-5 text-dark">
          Not Registered?
          <a href="register" class="text-dark fw-bold"> Create an Account</a>
        </div>
      </form>
    </div>
  </div>
</div>
